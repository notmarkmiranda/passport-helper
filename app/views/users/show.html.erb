<% if current_user %>
<div class="container">
	<div class="page-header">
		<i class="fa fa-tachometer fa-2x active" aria-hidden="true"></i>
		<p>Dashboard!</p>
	</div>
	<div class="list-group">
		<div class="list-group-item active">
			<h4 class="list-group-item-heading profile-header">Profile</h4>
		</div>
	</div>
	<div class="list-group-item profile-body">
		<p>Name: <%= @user.name %><br />
			E-Mail: <%= @user.email %></p>
			<a href="#">Edit Profile</a>
	</div>
		<hr />
	<div class="row">
		<div class="col-md-6">
		<div class="list-group">
			<div class="list-group-item active">

				<h4 class="list-group-item-heading profile-header">Passports<span class="label label-default label-pill pull-md-right"><%= @user.passport_count %></span></h4>
			</div>
		</div>
		<div class="list-group-item profile-body">
				<% @user.passports.each do |passport| %>
				<div class="passport">
					<%= link_to passport.name, passport_path(passport) %><%= button_to "Remove from My Account", user_passport_path(UserPassport.lookup(@user, passport)) , name: "add-to-account", method: :delete, data: { confirm: "REALLY?!?" } %>
				</div>
				<% end %>
		</div>
</div>

	</div>
</div>
<% end %>
